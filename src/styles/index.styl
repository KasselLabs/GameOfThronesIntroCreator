@font-face {
  font-family: Trajan;
  src: url('./Trajan Pro Regular.ttf');
}

@font-face {
  font-family: Trajan-Bold;
  src: url('./Trajan Pro Bold.ttf');
}

@font-face {
  font-family: GameOfThrones;
  src: url('./GameOfThrones.ttf');
}

$boxBackgroundColor = #1e1105;
$themeDarkBlue = #4c3514;
$themeLightBlue = lighten($themeDarkBlue, 60%);
$boxBorderColor = $themeLightBlue;
$white = white;
$black = black;

body {
  display: initial;
  color: $white;

  &.default-background {
    background-color: $black;
  }
}

#app {
  position: absolute;
  width: 100%;
  height: 100%;
}

logoTextStyle() {
  text-align: center;
  letter-spacing: 6px;
  font-family: GameOfThrones;
}

fontSizeResponsive() {
  font-size: 16px;

  @media $tablet {
    font-size: 18px;
  }
}

$defaultFontFamily = Trajan, Arial;
$defaultParagraphPadding = 20px;
$defaultParagraphPaddingMobile = 15px;

defaultTextStyle() {
  // letter-spacing: .1em;
  font-size: 16px;
  font-family: $defaultFontFamily;
}

openingTextStyle() {
  defaultTextStyle();
  // letter-spacing: .3em;
}

textOutline() {
  text-shadow: -1px -1px 0 $themeDarkBlue, 1px -1px 0 $themeDarkBlue, -1px 1px 0 $themeDarkBlue, 1px 1px 0 $themeDarkBlue;
}

// media query
$tablet = 'only screen and (min-device-width : 768px)';

.link {
  color: $themeLightBlue;
  font-weight: bold;
  transition: color 200ms;

  &:hover {
    color: $white;
  }
}

p {
  margin: .5em 0;

  a {
    color: $white;
  }
}

.title {
  logoTextStyle();
}

