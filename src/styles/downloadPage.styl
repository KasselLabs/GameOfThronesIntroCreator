.download-page {
  .box {
    z-index: 0;
    @media $tablet {
      width: 800px;
    }
  }

  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .donate_value {
    font-size: 110%;
  }

  .email {
    inputStyle();
    color: $darkTextColor;
    font-size: 16px;

    width: 95%;

    @media $tablet {
      width: 70%;
      font-size: 20px;
    }

    &::placeholder {
      color: lighten($darkTextColor, 20%);
    }
  }

  #closeButton {
    position: absolute;
    align-self: flex-end;
    margin-top: -5px;
    margin-left: 10px;
    padding: 10px 6px 6px;
    border-color: $boxBorderColor;
    background-color: transparent;
    font-weight: bold;
    line-height: 9px;

    &:hover {
      background-color: $buttonHoverColor;
    }

    @media $tablet {
      margin-top: 0;
    }
  }

  .buttons {
    margin-bottom: 0;
  }
}

.button {
  &.increase-padding {
    padding: 15px;
  }
}

span, a, p {
  &.bold {
    font-weight: bold;
  }
}

iframe{
  border: 0;
}

#stripeDonateIframe {
  width: 100%;
  height: 460px;
}

.compose-iframe {
  position: relative;
  width: 100%;

  .loader {
    z-index: -1;
  }

  .center {
    position: absolute;
    margin-top: 100px;
    width: 100%;
    pointer-events: none;
  }
}