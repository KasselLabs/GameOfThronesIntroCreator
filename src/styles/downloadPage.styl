@keyframes box-appear {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.download-page {
  .box {
    z-index: 0;
    animation: 0.4s ease-out box-appear;

    h1 {
      animation: 0.6s ease-out box-appear;
      text-shadow: 0 0 5px $darkTextColor;
    }

    p {
      animation: 0.8s ease-out box-appear;
    }

    button {
      animation: 1.1s ease-out box-appear;
    }

    @media $tablet {
      width: 800px;
    }
  }

  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .donate_value {
    font-size: 110%;
  }

  .email {
    inputStyle();
    color: $darkTextColor;
    font-size: 16px;

    width: 95%;

    @media $tablet {
      width: 70%;
      font-size: 20px;
    }

    &::placeholder {
      color: lighten($darkTextColor, 20%);
    }
  }

  #closeButton {
    position: absolute;
    align-self: flex-end;
    margin-top: -5px;
    margin-left: 10px;
    padding: 10px 6px 6px;
    border-color: alpha($darkTextColor, .2);
    color: $darkTextColor;
    background-color: transparent;
    font-weight: bold;
    line-height: 9px;

    &:hover {
      background-color: $buttonHoverColor;
      color: $boxBackgroundColor;
    }

    @media $tablet {
      margin-top: 0;
    }
  }

  .buttons {
    margin-bottom: 0;
  }
}

.button {
  &.increase-padding {
    padding: 15px;
  }
}

span, a, p {
  &.bold {
    font-weight: bold;
  }
}

iframe{
  border: 0;
}

#stripeDonateIframe {
  width: 100%;
  height: 507px;

  @media (max-width: 669px) {
    height: 693px;
  }
}

.compose-iframe {
  position: relative;
  width: 100%;

  .loader {
    z-index: -1;
  }

  .center {
    position: absolute;
    margin-top: 100px;
    width: 100%;
    pointer-events: none;
  }
}
