.background-image {
  position: fixed;
  z-index: -1;
  width: 100%;
  height: 100%;
  background: url('../assets/img/background.jpg') $themeDarkColor no-repeat center center fixed;
  filter: brightness(.5);
  background-size: cover;
}

.center-content {
  display: flex;
  flex-direction: column;
  align-items: center;

  &.horizontal {
    flex-direction: row;
    justify-content: center;
  }
}

.app-title {
  logoFontStyle();
  textOutline();
  margin: 16px 0;
}

.box-page {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  width: 100%;

  .box {
    width: unset;

    @media $tablet {
      width: 700px;
    }
  }
}

.error-boundary {
  img {
    margin-bottom: 20px;
  }
}

.share-buttons {
  margin-bottom: 5px;
  text-align: center;

  a {
    &:not(:first-child) {
      margin-left: 7px;
    }
  }

  @media $tablet {
    position: fixed;
    bottom: 0;
    left: 5px;
  }
}
