
#videoPage {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
}

:-webkit-full-screen {
  background-color: black;
}

.video-container {
  position: relative;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 100%;
  pointer-events: none;  // comment this line to be able to click on video to pause and play.
}

.buttons-container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
  background-color: #050505;

  a, button {
    min-width: 180px;
    text-align: center;
  }
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  // background-color: rgba(255,0,0,.1);  // uncomment to see video container box for development only
  // pointer-events: none; // uncoment to allow click in video to pause and play.
}

.video-overlay__content {
  height: 100%;
  openingFontStyle();

  > div {
    position: absolute;
    display: none;
    // display: block;
    width: 100%;
    text-align: center;
    word-wrap: break-word;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
}

@import './animations';