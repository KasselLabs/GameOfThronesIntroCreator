::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background-color: darken($themeDarkBlue, 30%);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: lighten($themeDarkBlue, 10%);
    &:hover {
        background-color: lighten($themeDarkBlue, 20%);
    }
}